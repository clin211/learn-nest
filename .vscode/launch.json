    "version": "0.2.0",
    "configurations": [
       {
        "name": "Launch via NPM",
        "request": "launch",
        "runtimeArgs": [
            "run-script",
            "start:debug"
        ],
        "runtimeExecutable": "pnpm",
        "runtimeVersion": "16.16.0",
        "internalConsoleOptions": "neverOpen",
        "console": "integratedTerminal",
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node"
       }
    ]
}